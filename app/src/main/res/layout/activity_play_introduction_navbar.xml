<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavBarLayout"
    android:id="@+id/playIntroLayoutNavBar"
    android:weightSum="2" >

    <com.liweiyap.narradir.ui.fonts.CustomTypefaceableObserverButton
        android:id="@+id/playIntroLayoutPauseButton"
        android:text="@string/pause_button_text_state_active"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        style="@style/NavBarCapsuleStyleAutosized" />

    <com.liweiyap.narradir.ui.fonts.CustomTypefaceableObserverButton
        android:id="@+id/playIntroLayoutStopButton"
        android:text="@string/stop_button_text"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        style="@style/NavBarCapsuleStyleAutosized" />

</LinearLayout>