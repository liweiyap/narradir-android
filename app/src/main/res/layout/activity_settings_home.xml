<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingsHomeLayout"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bermudagrey_grunge_background"
    android:weightSum="10"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsHomeActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        layout="@layout/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:id="@+id/narrationSettingsLayout" />

    <include
        layout="@layout/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:id="@+id/backgroundSettingsLayout" />

    <include
        layout="@layout/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:id="@+id/roleTimerSettingsLayout" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/authorInfoLayout"
        android:orientation="horizontal"
        android:weightSum="5" >

        <include
            layout="@layout/author_website_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/author_logo_contentdescription" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <include
        layout="@layout/activity_settings_home_navbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>