<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingsNarrationLayout"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bermudagrey_grunge_background"
    android:weightSum="10"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsNarrationActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.liweiyap.narradir.ui.fonts.CustomTypefaceableTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/settingsTitleTextView"
        style="@style/SettingsTitleStyleAutosized" />

    <include
        layout="@layout/updown_control_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"/>

    <include
        layout="@layout/non_activity_starting_navbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>