<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:com.liweiyap.narradir="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/playerNumberSelectionLayout"
    android:weightSum="6"
    android:gravity="top">

    <com.liweiyap.narradir.utils.fonts.CustomTypefaceableCheckableObserverButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/p5Button"
        android:gravity="center"
        android:text="@string/p5_button_text"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        style="@style/ArkhamBoldTypefacedTextViewStyle"
        com.liweiyap.narradir:checkedDrawableId="@drawable/p5_button_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@drawable/p5_button_unchecked_background"
        com.liweiyap.narradir:defaultCheckedState="true" />

    <com.liweiyap.narradir.utils.fonts.CustomTypefaceableCheckableObserverButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/p6Button"
        android:gravity="center"
        android:text="@string/p6_button_text"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.5"
        style="@style/ArkhamBoldTypefacedTextViewStyle"
        com.liweiyap.narradir:checkedDrawableId="@drawable/p6_button_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@drawable/p6_button_unchecked_background"
        com.liweiyap.narradir:defaultCheckedState="false" />

    <com.liweiyap.narradir.utils.fonts.CustomTypefaceableCheckableObserverButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/p7Button"
        android:gravity="center"
        android:text="@string/p7_button_text"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.5"
        style="@style/ArkhamBoldTypefacedTextViewStyle"
        com.liweiyap.narradir:checkedDrawableId="@drawable/p7_button_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@drawable/p7_button_unchecked_background"
        com.liweiyap.narradir:defaultCheckedState="false" />

    <com.liweiyap.narradir.utils.fonts.CustomTypefaceableCheckableObserverButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/p8Button"
        android:gravity="center"
        android:text="@string/p8_button_text"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.5"
        style="@style/ArkhamBoldTypefacedTextViewStyle"
        com.liweiyap.narradir:checkedDrawableId="@drawable/p8_button_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@drawable/p8_button_unchecked_background"
        com.liweiyap.narradir:defaultCheckedState="false" />

    <com.liweiyap.narradir.utils.fonts.CustomTypefaceableCheckableObserverButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/p9Button"
        android:gravity="center"
        android:text="@string/p9_button_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.5"
        style="@style/ArkhamBoldTypefacedTextViewStyle"
        com.liweiyap.narradir:checkedDrawableId="@drawable/p9_button_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@drawable/p9_button_unchecked_background"
        com.liweiyap.narradir:defaultCheckedState="false" />

    <com.liweiyap.narradir.utils.fonts.CustomTypefaceableCheckableObserverButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/p10Button"
        android:gravity="center"
        android:text="@string/p10_button_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.5"
        style="@style/ArkhamBoldTypefacedTextViewStyle"
        com.liweiyap.narradir:checkedDrawableId="@drawable/p10_button_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@drawable/p10_button_unchecked_background"
        com.liweiyap.narradir:defaultCheckedState="false" />

</LinearLayout>