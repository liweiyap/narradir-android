<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayoutNavBar"
    android:weightSum="3" >

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.liweiyap.narradir.utils.fonts.CustomTypefaceableObserverButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/mainLayoutPlayButton"
        android:gravity="center"
        android:text="@string/play_button_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:minWidth="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/capsule"
        style="@style/ArkhamBoldTypefacedTextViewStyle" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <com.liweiyap.narradir.utils.ObserverImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButton"
            android:src="@drawable/ic_gear"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/settings_button_background" />

    </RelativeLayout>

</LinearLayout>