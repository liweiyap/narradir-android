<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secrethitlerCharacterSelectionLayout"
    android:weightSum="10"
    style="@style/ActivityLayoutStyle"
    tools:context=".SecretHitlerCharacterSelectionActivity">

    <com.liweiyap.narradir.ui.fonts.StrokedCustomTypefaceableTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/gameTitleSecretHitlerTextView"
        style="@style/GameTitleStyleSecretHitlerAutosized" />

    <include
        layout="@layout/player_number_selection_secrethitler_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        layout="@layout/good_characters_secrethitler_linear_layout_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <include
        layout="@layout/good_characters_secrethitler_linear_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <include
        layout="@layout/evil_characters_secrethitler_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2" />

    <include
        layout="@layout/activity_character_selection_navbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>