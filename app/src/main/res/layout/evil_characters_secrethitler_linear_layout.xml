<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/goodCharactersLinearLayoutTop"
    android:weightSum="4" >

    <com.liweiyap.narradir.ui.ObserverImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/hitlerButton"
        android:contentDescription="@string/hitler_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/ic_hitler"
        android:background="@drawable/fascist_background"
        android:visibility="visible"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp" />

    <com.liweiyap.narradir.ui.ObserverImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/fascist0Button"
        android:contentDescription="@string/fascist_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/ic_fascist"
        android:background="@drawable/fascist_background"
        android:visibility="visible"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" />

    <com.liweiyap.narradir.ui.ObserverImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/fascist1Button"
        android:contentDescription="@string/fascist_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/ic_fascist"
        android:background="@drawable/fascist_background"
        android:visibility="invisible"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" />

    <com.liweiyap.narradir.ui.ObserverImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/fascist2Button"
        android:contentDescription="@string/fascist_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/ic_fascist"
        android:background="@drawable/fascist_background"
        android:visibility="invisible"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp" />

</LinearLayout>