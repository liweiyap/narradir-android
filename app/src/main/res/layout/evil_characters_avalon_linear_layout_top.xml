<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:com.liweiyap.narradir="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/evilCharactersLinearLayoutTop"
    android:weightSum="4" >

    <com.liweiyap.narradir.utils.CheckableObserverImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/assassinButton"
        android:contentDescription="@string/assassin_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/assassin_unchecked"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        com.liweiyap.narradir:checkedDrawableId="@drawable/blank_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@null"
        com.liweiyap.narradir:defaultCheckedState="true" />

    <com.liweiyap.narradir.utils.CheckableObserverImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/morganaButton"
        android:contentDescription="@string/morgana_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/morgana_unchecked"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        com.liweiyap.narradir:checkedDrawableId="@drawable/blank_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@null"
        com.liweiyap.narradir:defaultCheckedState="false" />

    <com.liweiyap.narradir.utils.CheckableObserverImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/mordredButton"
        android:contentDescription="@string/mordred_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/mordred_unchecked"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        com.liweiyap.narradir:checkedDrawableId="@drawable/blank_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@null"
        com.liweiyap.narradir:defaultCheckedState="false" />

    <com.liweiyap.narradir.utils.CheckableObserverImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/oberonButton"
        android:contentDescription="@string/oberon_button_contentdescription"
        android:scaleType="fitXY"
        android:src="@drawable/oberon_unchecked"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        com.liweiyap.narradir:checkedDrawableId="@drawable/blank_checked_background"
        com.liweiyap.narradir:uncheckedDrawableId="@null"
        com.liweiyap.narradir:defaultCheckedState="false" />

</LinearLayout>